{
  "name": "ts-fullstack-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "clean:generated": "rm -rf generated",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json pages/api",
    "generate:gqlcodegen": "graphql-codegen --config codegen.yml",
    "generate": "yarn run generate:prisma && yarn run generate:nexus && yarn run generate:gqlcodegen",
    "setup": "node scripts/setup.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn run generate"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint:fix",
      "git add --force"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.6",
    "@graphql-codegen/import-types-preset": "^1.17.6",
    "@graphql-codegen/typescript": "1.17.6",
    "@graphql-codegen/typescript-operations": "1.17.6",
    "@graphql-codegen/typescript-urql": "^1.17.6",
    "@prisma/cli": "^2.3.0",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "@prisma/client": "^2.3.0",
    "apollo-server-micro": "^2.16.0",
    "graphql": "^15.3.0",
    "next": "^9.4.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "urql": "^1.10.0"
  }
}
